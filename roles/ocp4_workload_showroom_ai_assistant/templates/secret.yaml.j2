---
apiVersion: v1
kind: Secret
metadata:
  name: {{ ocp4_workload_showroom_ai_assistant_name }}-secrets
  namespace: {{ _showroom_namespace }}
  labels:
    app.kubernetes.io/name: {{ ocp4_workload_showroom_ai_assistant_name }}
type: Opaque
stringData:
  # vLLM API Token (use when llm.engine = "vllm" in assistant-config.yaml)
  VLLM_API_TOKEN: "{{ _vllm_api_token }}"
  # Optional: vLLM URL (use when llm.endpoint is set for vLLM)
  VLLM_URL: "{{ ocp4_workload_showroom_ai_assistant_vllm_url }}"
  # Optional: vLLM Max Tokens
  VLLM_MAX_TOKENS: "{{ ocp4_workload_showroom_ai_assistant_vllm_max_tokens }}"
  # Optional: vLLM TLS Verify (true/false)
  VLLM_TLS_VERIFY: "{{ ocp4_workload_showroom_ai_assistant_vllm_tls_verify }}"

