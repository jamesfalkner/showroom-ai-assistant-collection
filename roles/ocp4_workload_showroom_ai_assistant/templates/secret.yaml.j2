---
apiVersion: v1
kind: Secret
metadata:
  name: {{ ocp4_workload_showroom_ai_assistant_name }}-secrets
  namespace: {{ _showroom_namespace }}
  labels:
    app.kubernetes.io/name: {{ ocp4_workload_showroom_ai_assistant_name }}
type: Opaque
stringData:
  # OpenAI API Key (use when llm.engine = "openai" in assistant-config.yaml)
  OPENAI_API_KEY: "{{ ocp4_workload_showroom_ai_assistant_openai_api_key }}"
  # Optional: OpenAI Base URL (use when llm.endpoint is set for OpenAI)
  OPENAI_BASE_URL: "{{ ocp4_workload_showroom_ai_assistant_openai_base_url }}"

  # vLLM API Token (use when llm.engine = "vllm" in assistant-config.yaml)
  VLLM_API_TOKEN: "{{ ocp4_workload_showroom_ai_assistant_vllm_api_token }}"
  # Optional: vLLM URL (use when llm.endpoint is set for vLLM)
  VLLM_URL: "{{ ocp4_workload_showroom_ai_assistant_vllm_url }}"
  # Optional: vLLM Max Tokens
  VLLM_MAX_TOKENS: "{{ ocp4_workload_showroom_ai_assistant_vllm_max_tokens }}"
  # Optional: vLLM TLS Verify (true/false)
  VLLM_TLS_VERIFY: "{{ ocp4_workload_showroom_ai_assistant_vllm_tls_verify }}"

  # Ollama API Key (use when llm.engine = "ollama" in assistant-config.yaml)
  OLLAMA_API_KEY: "{{ ocp4_workload_showroom_ai_assistant_ollama_api_key }}"
  # Optional: Ollama URL (use when llm.endpoint is set for Ollama)
  OLLAMA_URL: "{{ ocp4_workload_showroom_ai_assistant_ollama_url }}"

  # Tavily Search API Key
  TAVILY_SEARCH_API_KEY: "{{ ocp4_workload_showroom_ai_assistant_tavily_search_api_key }}"
